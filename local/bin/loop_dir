#!/bin/bash

root_dir="${1%/}"
pattern="${root_dir}/*/"
lower_bound="$2"
upper_bound="$3"
do_print_full_path=1
if [[ ${4:-whatever} == "-dir" ]]; then
  do_print_full_path=0
fi
for dir in $pattern; do
  base=$(basename $dir)
  if [[ $base -ge $lower_bound && $base -le $upper_bound ]]; then
    full_dir="$(realpath $dir)"
    if [[ $do_print_full_path == 1 ]]; then
      echo $full_dir
    else
      echo $base
    fi
  fi
done
